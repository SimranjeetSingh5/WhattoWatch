<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/hotelImage"
        app:riv_corner_radius="@dimen/_40sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/kfc_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/hotelName"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:text="KFC"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/acme"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/hotelImage"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:text="47 mins"
        android:fontFamily="@font/acme"
        android:textStyle="bold"
        android:textSize="@dimen/_8ssp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/hotelName"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:id="@+id/discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20% discount"
        android:background="@color/white"
        android:textColor="@color/primary"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/acme"
        android:textStyle="bold"
        android:padding="@dimen/_8sdp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/hotelImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>